double sh(vector<pair<int, int>> v) {
	int n = v.size();
	int s1 = 0;
	int s2 = 0;
	for (int i = 0; i < n; i++) {
		int x1 = v[i].first;
		int y1 = v[i].second;
		int x2 = v[(i + 1) % n].first;
		int y2 = v[(i + 1) % n].second;
		s1 += x1 * y2;
		s2 += y1 * x2;
		
	}
	double so = (s1 - s2) / 2;
	return so;
}
