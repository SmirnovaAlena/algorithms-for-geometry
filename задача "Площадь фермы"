#include<iostream>
#include<vector>
#include<algorithm>
#include<set>
using namespace std;
int cross(pair<int,int> a, pair<int, int> b, pair<int, int> c) {
	return (b.first - a.first) * (c.second - a.second) - (b.second - a.second) * (c.first - a.first);
}
vector<pair<int, int>> func(vector<pair<int, int>> v) {
	vector<pair<int, int>> lower;
	for (int i = 0; i < v.size(); i++) {
		while (lower.size() >= 2 && cross(lower[lower.size() - 2], lower[lower.size() - 1], v[i]) <= 0) {
			lower.pop_back();

		}
		lower.push_back(v[i]);
	}
	reverse(v.begin(), v.end());
	vector<pair<int, int>> upper;
	for (int i = 0; i < v.size(); i++) {
		while (upper.size() >= 2 && cross(upper[upper.size() - 2], upper[upper.size() - 1], v[i]) <= 0) {
			upper.pop_back();

		}
		upper.push_back(v[i]);
	}
	
	vector < pair<int, int>> res;
	for (auto y : lower) {
		res.push_back(y);
	}
	lower.pop_back();
	for (auto y : upper) {
		res.push_back(y);
	}
	upper.pop_back();
	return res;
}
double sh(vector<pair<int, int>> v) {
	int n = v.size();
	int s1 = 0;
	int s2 = 0;
	for (int i = 0; i < n; i++) {
		int x1 = v[i].first;
		int y1 = v[i].second;
		int x2 = v[(i + 1) % n].first;
		int y2 = v[(i + 1) % n].second;
		s1 += x1 * y2;
		s2 += y1 * x2;
		
	}
	double so = (s1 - s2) / 2;
	return so;
}
int main() {
	int n;
	cin >> n;
	vector<pair<int, int>> v;
	for (int i = 0; i < n; i++) {
		int x, y;
		cin >> x >> y;
		v.push_back({ x,y });
	}
	set<pair<int, int>> s(v.begin(), v.end());
	vector<pair<int, int>> u(s.begin(), s.end());
	sort(u.begin(), u.end());
	
	vector<pair<int, int>> res = func(u);
	cout << sh(res);
	return 0;
}
